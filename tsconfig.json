{
  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "baseUrl": "./",
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "lib": ["dom", "es5", "es6", "scripthost"],
    "target": "es5",
    "outDir": "built",
    "sourceMap": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "./node_modules", "node_modules/react-native/types/", "./node_modules/*", "./node_modules/@types/node/index.d.ts", "demo"],
  "resolveJsonModule": true
}
